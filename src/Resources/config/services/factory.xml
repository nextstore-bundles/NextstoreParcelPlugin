<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="nextstore_sylius_parcel.factory.product"
            class="Nextstore\SyliusParcelPlugin\Factory\Product\ProductFactory"
            decorates="sylius.factory.product"
            public="false"
        >
            <argument type="service" id="nextstore_sylius_parcel.factory.product.inner" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="parameter_bag" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="nextstore_sylius_parcel.factory.order_item"
            class="Nextstore\SyliusParcelPlugin\Factory\Order\OrderItemFactory"
            decorates="sylius.factory.order_item"
            public="false"
        >
            <argument type="service" id="nextstore_sylius_parcel.factory.order_item.inner" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.context.channel" />
        </service>
    </services>
</container>
